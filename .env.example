# Docker XFCE + KasmVNC Configuration
# Copy this file to .env and customize your values
# Load with: source .env

# VNC Configuration
export VNC_PASSWORD="your_secure_vnc_password"
export ENABLE_HTTPS="false"  # Set to "true" for HTTPS mode

# Docker Hub Publishing (optional)
export DOCKERHUB_USERNAME="your_dockerhub_username"
export DOCKERHUB_REPO="debian-xfce-kasmvnc"
export IMAGE_TAG="latest"

# Usage:
# 1. Copy: cp .env.example .env
# 2. Edit: nano .env
# 3. Load: source .env
# 4. Build: ./docker-manager.sh build
# 5. Publish: ./docker-manager.sh publish
